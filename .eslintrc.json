{
    "env": {
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "project": "tsconfig.eslint.json",
        "sourceType": "module"
    },
    "extends": [
        "@ionaru",
        "plugin:jest/all"
    ],
    "rules": {
        "jest/no-hooks": "off",
        "import/no-unresolved": "off",
        "import/extensions": ["error", "always", {"ignorePackages": true}]
    }
}
